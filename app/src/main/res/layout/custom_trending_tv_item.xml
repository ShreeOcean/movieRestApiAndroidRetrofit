<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_corner"
    android:layout_margin="5dp"
    android:padding="5dp">

    <ImageView
        android:id="@+id/imageView_backdrop_trending_tv"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_margin="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView_poster_trending_tv"
        android:layout_width="180dp"
        android:layout_height="250dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_trending_tv_original_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="@string/originalname"
        android:layout_marginTop="300dp"
        android:textColor="#CCFF90"
        android:textSize="@dimen/text_heading_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView_poster_trending_tv" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_poster_trending_tv">

        <TextView
            android:id="@+id/tv_firstAirDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/tv_firstairdate"
            android:textColor="#F4FF81" />

        <TextView
            android:id="@+id/tv_trending_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/name"
            android:textColor="#FFFF8D" />

        <TextView
            android:id="@+id/tv_trending_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/rating"
            android:textColor="#FFE57F" />

        <TextView
            android:id="@+id/tv_trending_overview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/overview"
            android:textColor="#FFD180" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>